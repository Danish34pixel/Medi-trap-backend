{
  "info": {
    "name": "MedTek Stockist, Company & Medicine API",
    "_postman_id": "b6fa91c1-2025-10-19-collection",
    "description": "Postman collection for testing Stockist, Company, and Medicine APIs in the MedTek backend.",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
